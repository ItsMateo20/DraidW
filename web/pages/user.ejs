        <link rel="stylesheet" href="../assets/styles/Main.css">
        <style>
            .navbarmargin {
                margin-top: 10vh;
            }


            @media (max-width: 1200px) {
                .navbarmargin {
                    margin-top: 12vh;
                }
            }

            @media (max-width: 992px) {
                .navbarmargin {
                    margin-top: 15vh;
                }
            }

            @media (max-width: 768px) {
                .navbarmargin {
                    margin-top: 15vh;
                }
            }

            @media (max-width: 480px) {
                .navbarmargin {
                    margin-top: 15vh;
                }
            }

            .bio-badge {
                white-space: normal;
                overflow-x: auto;
                text-align: left;
            }
        </style>
    </head>


    <body>
        <div class="container">
            <%- include('../partials/header.ejs') %>

                <div class="navbarmargin text-center text-muted">
                    <img src="<%= avatar1 %>" height="150" width="150" style="border-radius: 50%;" alt="useravatar">
                    <h3>
                        <% if (owner=="True" ) { %>
                            <%= globalname %>
                                <% } else if (owner=="False" ) { %>
                                    <%= globalname1 %>
                                        <% } %>
                                            <br />
                                            <% if (profile[14]=="True" ) { %>
                                                <img src="../assets/images/ShieldIcon.png" style="margin-bottom: 2px;"
                                                    width="43px" height="43px" alt="verified draid staff"
                                                    title="Verified Draid Staff"></img>
                                                <% } %>
                                                    <% if (profile[12]=="True" ) { %>
                                                        <img src="../assets/images/DeveloperIcon.png"
                                                            style="margin-bottom: 2px;" width="43px" height="43px"
                                                            alt="verified draid developer"
                                                            title="Verified Draid Developer"></img>
                                                        <% } %>
                    </h3>
                    <% if (owner=="True" ) { %>
                        <a href="/user/settings#profile" class="btn btn-outline-secondary">Edit profile</a>
                        <% } %>
                </div>
                <div class="divider mt-3"></div>
                <div class="container justify-content-center mt-3">
                    <div class="row g-3 g-lg-3">
                        <div class="col">
                            <div class="card mt-3">
                                <div class="card-body">
                                    <h4 class="card-title">User Information</h4>
                                    <p class="card-text fw-bolder">
                                        Account created: <span class="badge">
                                            <%= profile[11] %>
                                        </span>
                                    </p>
                                    <p class="card-text fw-bolder">
                                        Username: <span class="badge">
                                            <% if (owner=="True" ) { %>
                                                <%= username %>
                                                    <% } else if (owner=="False" ) { %>
                                                        <%= username1 %>
                                                            <% } %>
                                        </span>
                                    <p class="card-text fw-bolder">
                                        Language: <span class="badge">
                                            <%= profile[13] %>
                                        </span>
                                    </p>
                                    <% if (settings[0]==true) { %>
                                        <h4 class="card-title">Contacts</h4>
                                        <p class="card-text fw-bolder">
                                            Email: <span class="badge bg-danger">
                                                <%= profile[1] %>
                                            </span>
                                        </p>
                                        <p class="card-text fw-bolder">
                                            Number: <span class="badge bg-danger">
                                                <%= profile[2] %>
                                            </span>
                                        </p>
                                        <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card mt-3">
                                <div class="card-body">
                                    <h4 class="card-title">Bio</h4>
                                    <h5 class="card-text fw-bolder">
                                        <span class="bio-badge badge">
                                            <%= profile[0] %>
                                        </span>
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card mt-3">
                                <div class="card-body">
                                    <h4 class="card-title">Social media</h4>
                                    <h5 class="fw-bolder">
                                        <% if (profile[3].toLowerCase().startsWith("https://github.com") ||
                                            profile[4].toLowerCase().startsWith("https://www.youtube.com") ||
                                            profile[5].toLowerCase().startsWith("https://open.spotify.com") ||
                                            profile[6].toLowerCase().startsWith("https://twitter.com") ||
                                            profile[7].toLowerCase().startsWith("https://www.instagram.com") ||
                                            profile[8].toLowerCase().startsWith("https://www.twitch.tv") ||
                                            profile[9].toLowerCase().startsWith("https://www.reddit.com") ||
                                            profile[10].toLowerCase().startsWith("https://")) { %>
                                            <% if (profile[3].startsWith("https://github.com")) { %>
                                                <p class="card-text" style="font-size: 15px;">
                                                    <img src="../assets/icons/github.png" height="25px" width="25px"
                                                        style="float: left; margin-right: 10px;" alt="social"></img>
                                                    <a href="<%= profile[3] %>">
                                                        <span class="badge"
                                                            style="background-color: #2a2c2e;">Github</span>
                                                    </a>
                                                </p>
                                                <% } %>
                                                    <% if (profile[4].startsWith("https://www.youtube.com")) { %>
                                                        <p class="card-text" style="font-size: 15px;">
                                                            <img src="../assets/icons/youtube.png" height="25px"
                                                                width="25px" style="float: left; margin-right: 10px;"
                                                                alt="social"></img>
                                                            <a href="<%= profile[4] %>">
                                                                <span class="badge"
                                                                    style="background-color: #cd0f12;">Youtube</span>
                                                            </a>
                                                        </p>
                                                        <% } %>
                                                            <% if (profile[5].startsWith("https://open.spotify.com")) {
                                                                %>
                                                                <p class="card-text" style="font-size: 15px;">
                                                                    <img src="../assets/icons/spotify.png" height="25px"
                                                                        width="25px"
                                                                        style="float: left; margin-right: 10px;"
                                                                        alt="social"></img>
                                                                    <a href="<%= profile[5] %>">
                                                                        <span class="badge"
                                                                            style="background-color: #23b05c;">Spotify</span>
                                                                    </a>
                                                                </p>
                                                                <% } %>
                                                                    <% if (profile[6].startsWith("https://twitter.com"))
                                                                        { %>
                                                                        <p class="card-text" style="font-size: 15px;">
                                                                            <img src="../assets/icons/twitter.png"
                                                                                height="25px" width="25px"
                                                                                style="float: left; margin-right: 10px; border-radius: 25%;"
                                                                                alt="social"></img>
                                                                            <a href="<%= profile[6] %>">
                                                                                <span class="badge"
                                                                                    style="background-color: #1c87d2;">Twitter</span>
                                                                            </a>
                                                                        </p>
                                                                        <% } %>
                                                                            <% if
                                                                                (profile[7].startsWith("https://www.instagram.com"))
                                                                                { %>
                                                                                <p class="card-text"
                                                                                    style="font-size: 15px;">
                                                                                    <img src="../assets/icons/instagram.png"
                                                                                        height="25px" width="25px"
                                                                                        style="float: left; margin-right: 10px;"
                                                                                        alt="social"></img>
                                                                                    <a href="<%= profile[7] %>">
                                                                                        <span class="badge"
                                                                                            style="background-color: #b84366;">Instagram</span>
                                                                                    </a>
                                                                                </p>
                                                                                <% } %>
                                                                                    <% if
                                                                                        (profile[8].startsWith("https://www.twitch.tv"))
                                                                                        { %>
                                                                                        <p class="card-text"
                                                                                            style="font-size: 15px;">
                                                                                            <img src="../assets/icons/twitch.png"
                                                                                                height="25px"
                                                                                                width="25px"
                                                                                                style="float: left; margin-right: 10px;"
                                                                                                alt="social"></img>
                                                                                            <a href="<%= profile[8] %>">
                                                                                                <span class="badge"
                                                                                                    style="background-color: #7845d2;">Twitch</span>
                                                                                            </a>
                                                                                        </p>
                                                                                        <% } %>
                                                                                            <% if
                                                                                                (profile[9].startsWith("https://www.reddit.com"))
                                                                                                { %>
                                                                                                <p class="card-text"
                                                                                                    style="font-size: 15px;">
                                                                                                    <img src="../assets/icons/reddit.png"
                                                                                                        height="25px"
                                                                                                        width="25px"
                                                                                                        style="float: left; margin-right: 10px;"
                                                                                                        alt="social"></img>
                                                                                                    <a
                                                                                                        href="<%= profile[9] %>">
                                                                                                        <span
                                                                                                            class="badge"
                                                                                                            style="background-color: #cb4413;">Reddit</span>
                                                                                                    </a>
                                                                                                </p>
                                                                                                <% } %>
                                                                                                    <% if
                                                                                                        (profile[10].startsWith("https://"))
                                                                                                        { %>
                                                                                                        <p class="card-text"
                                                                                                            style="font-size: 15px;">
                                                                                                            <img src="../assets/icons/internetGlobe.png"
                                                                                                                height="25px"
                                                                                                                width="25px"
                                                                                                                style="float: left; margin-right: 10px;"
                                                                                                                alt="social"></img>
                                                                                                            <a
                                                                                                                href="<%= profile[10] %>">
                                                                                                                <span
                                                                                                                    class="badge"
                                                                                                                    style="background-color: #86b86b;">Personal
                                                                                                                    Website</span>
                                                                                                            </a>
                                                                                                        </p>
                                                                                                        <% } %>
                                                                                                            <% } else {
                                                                                                                %>
                                                                                                                <p class="card-text"
                                                                                                                    style="font-size: 15px;">
                                                                                                                    <span
                                                                                                                        class="badge bg-danger">No
                                                                                                                        social
                                                                                                                        media
                                                                                                                        linked.</span>
                                                                                                                </p>
                                                                                                                <% } %>
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <%- include('../partials/footer.ejs') %>
            <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-P54VCBX" height="0" width="0"
                    style="display:none;visibility:hidden"></iframe></noscript>
    </body>

