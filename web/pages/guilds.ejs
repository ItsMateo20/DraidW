  <body>
    <div class="container">
      <%- include('../partials/header.ejs') %>
        <div class="headerText">
          <h1 style="font-size: 50px;">Dashboards</h1>
          <h4 style="font-size: 20px;">Every guild that you can edit the settings.<span class="quiettext"
              style="font-size: small;"><br>Refresh the page if you do not see your server!</span> </h4>
        </div>
        <div class="divider"></div>
        <div class="container justify-content-center mt-3">
          <div class="row g-2 g-lg-4">
            <% for (let i=0; i < guilds.length; i++) { %>
              <% if (guilds[i].hasPerm) { %>
                <div class="col">
                  <div class="card guildcard mt-3">
                    <img class="card-img" style="filter: blur(5px)" src="<%= guilds[i].banner %>">
                    <div class="card-body flex-column"
                      style="position: absolute; top: 0; left: 0; right: 0; bottom: 0;">
                      <div class="card-img-overlay text-center">
                        <img src="<%= guilds[i].avatar %>" class="rounded guildavatar"
                          alt="<%= guilds[i].name %>'s Icon">
                        <h5 class="fw-bolder card-title wordbreaking">
                          <%= guilds[i].name %>
                        </h5>
                        <a class="btn btn-outline-secondary mt-auto" href="/dashboard/<%= guilds[i].id %>">Go to
                          Dashboard</a>
                      </div>
                    </div>
                  </div>
                </div>
                <% } %>
                  <% } %>
          </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>
